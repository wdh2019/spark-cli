<template>
    <div class="counter">
        <h1>{{ count }}</h1>
        <button @click="increment">Increment</button>
        <button @click="decrement">Decrement</button>
    </div>
</template>

<script setup>
import { ref } from 'vue';

const count = ref(0);

const increment = () => {
    count.value++;
};

const decrement = () => {
    count.value--;
};
</script>

